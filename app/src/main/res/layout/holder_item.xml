<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/holder_container"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginBottom="2dp"
    android:background="@android:color/transparent"
    android:clickable="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/holder_img"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_launcher" />

    <Space
        android:layout_width="5dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/holder_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/bebas_neue"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/holder"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/holder_rating"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/app_name"
            android:textColor="@color/holder_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/holder_release"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/app_name"
            android:textColor="@color/holder_text"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/holder_overview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed-medium"
            android:maxLines="4"
            android:text="blaasdljsadjhasdkasghdkashdksahdoashdosahdoashdoashdasdhasodhasodhsaodhasodihasodhasodhasodiashdoisahjdshfsdhfosdhfosdhflos"
            android:textColor="@color/holder_text"
            android:textSize="15sp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />
    </LinearLayout>


</LinearLayout>